<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_gradient_background"
    tools:context=".LoginActivity">

    <!-- Guideline untuk margin awal dan akhir -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <!-- Lingkaran putih belakang logo -->
    <View
        android:id="@+id/logoCircleBackground"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/circle_white"
        app:layout_constraintBottom_toTopOf="@id/cardFormBackground"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        android:layout_marginBottom="-80dp" />

    <!-- Logo Aplikasi (Overlapping di Card) -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="230dp"
        android:layout_height="227dp"
        android:layout_marginBottom="-5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/login_image"
        app:layout_constraintBottom_toTopOf="@id/cardFormBackground"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        tools:ignore="ContentDescription" />

    <!-- Card Background untuk Form -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFormBackground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:backgroundTint="#F9FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end">

        <!-- Container LinearLayout untuk isi form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Judul Halaman -->
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Selamat Datang Kembali!"
                android:textColor="#212121"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- Subjudul Halaman -->
            <TextView
                android:id="@+id/textViewSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Masuk untuk melanjutkan ke FocusEye"
                android:textColor="#212121"
                android:textSize="16sp" />

            <!-- Input Field untuk Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEmail"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColorHint="#212121"
                app:boxStrokeColor="#212121"
                app:hintTextColor="#212121"
                app:startIconDrawable="@drawable/baseline_alternate_email_24"
                app:startIconTint="#212121">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="#212121" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Input Field untuk Password -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPassword"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColorHint="#212121"
                app:boxStrokeColor="#212121"
                app:hintTextColor="#212121"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#212121"
                app:startIconDrawable="@drawable/outline_beenhere_24"
                app:startIconTint="#212121">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#212121" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Pesan Status/Error -->
            <TextView
                android:id="@+id/textViewStatusMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone"
                tools:text="Email atau password salah."
                tools:visibility="visible" />

            <!-- Tombol Login -->
            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="14dp"
                android:text="Login"
                android:textSize="16sp" />

            <!-- Link untuk ke Halaman Register -->
            <LinearLayout
                android:id="@+id/layoutGoToRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewAskRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum punya akun? "
                    android:textColor="#212121"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewGoToRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daftar di sini"
                    android:textColor="#673AB7"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Indikator Loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#212121"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
