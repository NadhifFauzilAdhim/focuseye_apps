<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ui.home.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.surendramaran.yolov8tflite.ui.customview.OverlayView
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Top Control Bar (Pill) -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_glass_panel"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/buttonSettings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Settings"
                android:src="@drawable/baseline_settings_24"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/buttonHistory"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="History"
                android:src="@drawable/baseline_equalizer_24"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/buttonToggleChart"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Chart"
                android:src="@drawable/baseline_ad_units_24"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/buttonSwitchCamera"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Switch Camera"
                android:src="@drawable/baseline_cameraswitch_24"
                app:tint="@android:color/white" />
        </LinearLayout>

        <!-- Recording Indicator -->
        <LinearLayout
            android:id="@+id/recIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_rec_badge"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            tools:visibility="visible">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/rec_dot_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="REC"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- Bottom Control Center -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="#00000000"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

             <!-- Glass Background Wrapper -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_glass_panel"
                android:padding="16dp">

                <!-- Chart container (Collapsible) -->
                <LinearLayout
                    android:id="@+id/cardChart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingBottom="16dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statistik Fokus Real-time"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChartFocus"
                        android:layout_width="match_parent"
                        android:layout_height="120dp" />
                </LinearLayout>

                 <!-- START/STOP Button -->
                 <com.google.android.material.button.MaterialButton
                    android:id="@+id/fabStartStop"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Mulai Analisis"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:icon="@drawable/baseline_play_arrow_24"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:iconTint="@android:color/white"
                    app:cornerRadius="32dp"
                    app:backgroundTint="?attr/colorPrimary"
                    android:layout_marginBottom="24dp"/>

                <!-- Stats Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- SISWA -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Siswa"
                            android:textAllCaps="true"
                            android:textSize="10sp"
                            android:letterSpacing="0.1"
                            android:textColor="#B3FFFFFF"/>
                        <TextView
                            android:id="@+id/textViewTotalStudents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:background="#33FFFFFF"/>

                    <!-- FOKUS -->
                    <LinearLayout
                         android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fokus"
                            android:textAllCaps="true"
                            android:textSize="10sp"
                            android:letterSpacing="0.1"
                            android:textColor="#B3FFFFFF"/>
                        <TextView
                            android:id="@+id/textViewFocusedStudents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                         android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:background="#33FFFFFF"/>

                    <!-- PROSES -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proses"
                            android:textAllCaps="true"
                            android:textSize="10sp"
                            android:letterSpacing="0.1"
                            android:textColor="#B3FFFFFF"/>
                        <TextView
                            android:id="@+id/inferenceTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0ms"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        
         <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>