<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="24dp"
    app:cardElevation="6dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/icon_calendar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textViewTimestamp"
            app:layout_constraintBottom_toBottomOf="@id/textViewTimestamp"
            app:srcCompat="@drawable/baseline_assessment_24"
            app:tint="@color/history_text_secondary_dark" />

        <TextView
            android:id="@+id/textViewTimestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="@color/history_text_primary_dark"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/buttonDelete"
            app:layout_constraintStart_toEndOf="@id/icon_calendar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="14 Agustus 2025, 10:48" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDelete"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Hapus sesi ini"
            app:icon="@drawable/baseline_delete_forever_24"
            app:iconTint="@color/history_text_secondary_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textViewTimestamp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartHistory"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTimestamp" />

        <LinearLayout
            android:id="@+id/layout_legends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@id/pieChartHistory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/pieChartHistory"
            app:layout_constraintBottom_toBottomOf="@id/pieChartHistory">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rasio Fokus"
                android:textColor="@color/history_text_primary_dark"
                android:textAppearance="?attr/textAppearanceTitleSmall"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <View
                    android:id="@+id/legendFocusedColor"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/chip_background_green" />
                <TextView
                    android:id="@+id/textViewFocusedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/history_text_secondary_dark"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    tools:text="Fokus (80%)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <View
                    android:id="@+id/legendUnfocusedColor"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/chip_background_red" />
                <TextView
                    android:id="@+id/textViewUnfocusedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/history_text_secondary_dark"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    tools:text="Tdk Fokus (20%)" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonViewPhotos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="24dp"
            android:padding="14dp"
            android:text="Lihat Analisis dan Foto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pieChartHistory" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>