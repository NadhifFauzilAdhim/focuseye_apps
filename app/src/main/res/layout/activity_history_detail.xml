<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/static_background"
    tools:context=".HistoryDetailActivity">

    <!-- AppBar modern -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/static_background"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_history_detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/static_background"
            app:navigationIconTint="@color/static_text_primary"
            app:title="Detail Sesi"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:titleTextColor="@color/static_text_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Konten scrollable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Card Analisis AI -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAiSummary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="28dp"
                app:cardElevation="6dp"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/baseline_assistant_24"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Analisis AI"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/static_text_primary"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewAiSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:lineSpacingExtra="6dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/static_text_secondary"
                        tools:text="Ini adalah tempat untuk ringkasan analisis dari AI..." />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStartAnalysis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Mulai Analisis"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        app:icon="@drawable/baseline_play_arrow_24"
                        app:iconGravity="textStart"
                        app:iconTint="@color/white"
                        app:cornerRadius="14dp"
                        android:backgroundTint="?attr/colorPrimary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Header Galeri -->
            <TextView
                android:id="@+id/textViewGalleryHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:text="Galeri Tangkapan"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/static_text_primary"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardAiSummary" />

            <!-- RecyclerView Galeri -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="12dp"
                android:paddingBottom="12dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/textViewGalleryHeader"
                app:spanCount="2"
                tools:itemCount="4"
                tools:listitem="@layout/item_unfocused_capture" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/textViewNoPhotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:padding="20dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/textViewGalleryHeader"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/baseline_app_blocking_24"
                    app:tint="@color/static_text_secondary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Tidak ada foto untuk sesi ini."
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="@color/static_text_secondary" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/progressBarDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="?attr/colorPrimary"
        android:visibility="gone"
        tools:visibility="visible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
